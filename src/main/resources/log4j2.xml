<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="LogToFile" fileName="logs/loader.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="LogToClientFile" fileName="logs/client.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <File name="LogToTranFile" fileName="logs/trans.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="LogToFile"/>
        </Root>
        <Logger name="com.couchbase.loader" level="ERROR" additivity="false">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Logger name="com.couchbase.transactions" level="ERROR" additivity="false">
            <AppenderRef ref="LogToTranFile"/>
        </Logger>
        <Logger name="com.couchbase.client.core" level="DEBUG" additivity="false">
            <AppenderRef ref="LogToClientFile"/>
        </Logger>

    </Loggers>
</Configuration>